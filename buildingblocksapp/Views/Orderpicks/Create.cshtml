@model IEnumerable<buildingblocksapp.Models.Werkorder>

@{
    ViewData["Title"] = "Create";
}

<h1>Create Orderpick<</h1>
<h4>Select werkorder to start</h4>

<hr />
<table class="table">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WerkorderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KlantOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Klantorder.Aantal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Klantorder.Type)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WerkorderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KlantOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klantorder.Aantal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klantorder.Type)
            </td>
            <td>
                <form asp-action="Create">
                    <input type="Hidden" name="WerkOrderId" value="@item.WerkorderId">
                        <div class="form-group">
                            <button type="submit" value="Start" class="btn btn-primary"></button>
                        </div>
                </form>
            </td>
        </tr>
    }
</tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
