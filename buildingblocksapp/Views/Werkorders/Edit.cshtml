@model buildingblocksapp.Models.Werkorder

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Werkorder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WerkorderId" />
            <div class="form-group">
                <label asp-for="OrderpickId" class="control-label"></label>
                <select asp-for="OrderpickId" class="form-control" asp-items="ViewBag.OrderpickId"></select>
                <span asp-validation-for="OrderpickId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KlantOrder" class="control-label"></label>
                <select asp-for="KlantOrder" class="form-control" asp-items="ViewBag.KlantOrder"></select>
                <span asp-validation-for="KlantOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motortype" class="control-label"></label>
                <select asp-for="Motortype" class="form-control"></select>
                <span asp-validation-for="Motortype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeverPeriode" class="control-label"></label>
                <input asp-for="LeverPeriode" class="form-control" />
                <span asp-validation-for="LeverPeriode" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AkkoordPanning" /> @Html.DisplayNameFor(model => model.AkkoordPanning)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
